{
  "name": "boilerplate",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "scss:dev": "node-sass ./scss/main.scss ./public/dist/app.css && npm run scss:prefix",
    "scss:prod": "node-sass --output-style compressed ./scss/main.scss ./public/dist/app.css && npm run scss:prefix",
    "scss:prefix": "postcss --use autoprefixer ./public/dist/app.css --replace",
    "scss:watch": "nodemon --watch scss --ext scss --exec \"npm run scss:dev\"",
    "js:dev": "browserify ./javascript/index.js --outfile ./public/dist/bundle.js --transform [ babelify --presets [ es2015 ] ] && npm run js:lint",
    "js:prod": "browserify ./javascript/index.js --outfile ./public/dist/bundle.js --transform [ babelify --presets [ es2015 ] ] --plugin [minifyify --no-map] && npm run js:lint",
    "js:lint": "eslint ./javascript/**/*.js || exit 0",
    "prod": "npm run scss:prod && npm run js:prod",
    "js:watch": "nodemon --watch javascript --ext js --exec \"npm run js:dev\"",
    "serve": "browser-sync start --server --index ./public/index.html --startPath ./public/index.html --files ./public",
    "start": "npm run scss:dev && npm run js:dev && concurrently --prefix \"[{name}]\" --names \"BS,JS,SCSS\" \"npm run scss:watch\" \"npm run js:watch\" \"npm run serve\""
  },
  "author": "Michael Smart",
  "devDependencies": {
    "autoprefixer": "^6.5.0",
    "babel-preset-es2015": "^6.14.0",
    "babelify": "^7.3.0",
    "browser-sync": "^2.16.0",
    "browserify": "^13.1.0",
    "concurrently": "^3.0.0",
    "eslint": "^3.7.0",
    "eslint-config-google": "^0.6.0",
    "eslint-config-standard": "^6.2.0",
    "eslint-plugin-promise": "^2.0.1",
    "eslint-plugin-standard": "^2.0.1",
    "minifyify": "^7.3.3",
    "node-sass": "^3.10.0",
    "nodemon": "^1.10.2",
    "postcss": "^5.2.4",
    "postcss-cli": "^2.6.0",
    "watchify": "^3.7.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikedevelops/boilerplate.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mikedevelops/boilerplate/issues"
  },
  "homepage": "https://github.com/mikedevelops/boilerplate#readme"
}
